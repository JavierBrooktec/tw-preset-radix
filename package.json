  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.4.9",
    "tailwindcss": "^4",
    "tsx": "^4.19.3",
    "typescript": "^5.1.6",
    "@radix-ui/themes": "^3.2.1"
  }
}
